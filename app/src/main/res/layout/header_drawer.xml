<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_drawer"
    >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/navigation_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/navigation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="9"
        android:text="@string/navigation_name"
        android:textSize="@dimen/navigation_name"
        app:layout_constraintStart_toEndOf="@+id/navigation_avatar"
        app:layout_constraintTop_toTopOf="@id/navigation_avatar" />


</androidx.constraintlayout.widget.ConstraintLayout>